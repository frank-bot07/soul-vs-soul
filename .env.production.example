NODE_ENV=production
PORT=3000
DATABASE_PATH=/data/soulvssoul.db
SESSION_SECRET=replace-with-64-char-random-string-here-please

# CORS
CORS_ORIGINS=https://soulvssoul.com,https://www.soulvssoul.com

# LLM
LLM_PROVIDER=openai
LLM_API_KEY=sk-your-api-key
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT_MS=15000
LLM_MAX_RETRIES=2

# Logging
LOG_LEVEL=info

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# Auth (optional)
ENABLE_AUTH_MAGIC_LINK=false
ENABLE_AUTH_X_OAUTH=false
