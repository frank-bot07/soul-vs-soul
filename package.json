{
  "name": "soul-vs-soul",
  "version": "1.0.0",
  "description": "AI personality battle arena",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node22 --outdir=dist --format=esm --packages=external && npm run build:client",
    "build:client": "esbuild public/js/main.ts --bundle --outfile=public/js/bundle.js --format=esm --target=es2022 --minify",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "multer": "^2.0.2",
    "pino": "^9.6.0",
    "ws": "^8.18.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.13.4",
    "@types/ws": "^8.5.14",
    "esbuild": "^0.25.0",
    "eslint": "^9.20.0",
    "jsdom": "^28.1.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vitest": "^3.0.5"
  }
}
